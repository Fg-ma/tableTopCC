{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": false,
    "sourceMap": true
  },
  "include": [
    "loginPage/src",
    "dashboard/src",
    "mongo/src",
    "vault/src",
    "components"
  ]
}
